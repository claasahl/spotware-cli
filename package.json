{
  "name": "spotware-cli",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "tsc",
    "build": "tsc",
    "prestart": "npm run build",
    "inspect": "node --inspect -r dotenv/config build/client/index.js > client.log 2>&1",
    "start": "node -r dotenv/config build/client/index.js 2>&1 | multilog s16777215 n100 dir ./logs",
    "client-log": "ts-node -r dotenv/config src/client/index.ts > client.log 2>&1",
    "client": "ts-node -r dotenv/config src/client/index.ts",
    "server": "ts-node -r dotenv/config src/server/index.ts",
    "server-dev": "nodemon --ext ts,json --exec \"ts-node -r dotenv/config src/server/index.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/claasahl/spotware-cli.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/claasahl/spotware-cli/issues"
  },
  "homepage": "https://github.com/claasahl/spotware-cli#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/ms": "^0.7.31",
    "@types/node": "^13.13.27",
    "@types/uuid": "^8.3.0",
    "husky": "^4.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@claasahl/spotware-adapter": "^3.1.3",
    "@types/bytes": "^3.1.0",
    "bytes": "^3.1.0",
    "debug": "^4.2.0",
    "dotenv": "^8.2.0",
    "indicators": "^0.1.5",
    "ms": "^2.1.2",
    "uuid": "^8.3.1"
  }
}
